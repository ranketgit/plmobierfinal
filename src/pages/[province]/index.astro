---
import Layout from '../../layouts/Layout.astro';
import LeadForm from '../../components/LeadForm.astro';
import { locations } from '../../data/locations';

export async function getStaticPaths() {
  return locations.map(location => ({
    params: { 
      province: location.province.toLowerCase().replace(/ /g, '-')
    },
    props: { location }
  }));
}

const { province } = Astro.params;
const { location } = Astro.props;

const provinceName = location.province;
const formattedProvinceName = provinceName === 'Brabant wallon' ? 'Brabant wallon' : provinceName;

const title = `Plombier à ${formattedProvinceName} | Service Plomberie 24/7`;
const description = `Service de plomberie professionnel à ${formattedProvinceName}. Intervention rapide 24/7 dans toutes les communes. Dépannage d'urgence, installation, réparation. ☎ 0472/80.80.80`;
---

<Layout title={title} description={description}>
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-600 text-white py-32">
    <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-blue-900/50 to-transparent"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-1 rounded-full bg-blue-500/20 backdrop-blur-sm text-white mb-4">
            Service disponible 24/7
          </span>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Plombier à {formattedProvinceName}
          </h1>
          <p class="text-xl mb-8 text-blue-100">
            Service de plomberie professionnel disponible dans toute la province. Intervention rapide garantie.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="tel:0472808080" class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-blue-50 transition duration-300 shadow-lg hover:shadow-xl flex items-center gap-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Appeler maintenant
            </a>
            <a href="#devis" class="border-2 border-white/30 backdrop-blur-sm text-white px-8 py-4 rounded-xl font-bold hover:bg-white/10 transition duration-300 flex items-center gap-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Devis gratuit
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600/30 to-purple-600/30 rounded-2xl blur-3xl"></div>
          <div class="relative" id="devis">
            <LeadForm />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Nos Services à {formattedProvinceName}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Une équipe de plombiers professionnels à votre service dans toute la province
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition duration-300 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Dépannage d'urgence</h3>
          <ul class="space-y-3 text-gray-600 mb-6">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Intervention en 30 minutes
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Service 24h/24 et 7j/7
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Devis gratuit
            </li>
          </ul>
          <p class="text-blue-600 font-bold text-lg">À partir de 80€</p>
        </div>
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition duration-300 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Installation sanitaire</h3>
          <ul class="space-y-3 text-gray-600 mb-6">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Installation complète
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Rénovation salle de bain
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Garantie décennale
            </li>
          </ul>
          <p class="text-blue-600 font-bold text-lg">Sur devis</p>
        </div>
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition duration-300 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Détection de fuites</h3>
          <ul class="space-y-3 text-gray-600 mb-6">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Détection non destructive
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Équipement professionnel
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Réparation immédiate
            </li>
          </ul>
          <p class="text-blue-600 font-bold text-lg">À partir de 120€</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Communes desservies en {formattedProvinceName}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Notre équipe intervient dans toutes les communes de la province
        </p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {location.communes.map((commune) => (
          <a
            href={`/${province}/${commune}`}
            class="group bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition duration-300 border border-gray-100 hover:border-blue-200"
          >
            <h3 class="text-lg font-semibold text-gray-800 group-hover:text-blue-600 capitalize">
              {commune.replace(/-/g, ' ')}
            </h3>
            <p class="text-sm text-gray-500 mt-2">
              Service 24/7
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-blue-900 to-blue-800 rounded-3xl overflow-hidden">
        <div class="px-8 py-12 md:p-16">
          <div class="max-w-3xl">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
              Besoin d'un plombier en {formattedProvinceName} ?
            </h2>
            <p class="text-blue-100 text-lg mb-8">
              Notre équipe de professionnels est disponible 24/7 pour tous vos besoins en plomberie.
              Contactez-nous pour un devis gratuit !
            </p>
            <div class="flex flex-wrap gap-4">
              <a href="tel:0472808080" class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-blue-50 transition duration-300">
                Appeler maintenant
              </a>
              <a href="#devis" class="bg-blue-700 text-white px-8 py-4 rounded-xl font-bold hover:bg-blue-600 transition duration-300">
                Demander un devis
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>